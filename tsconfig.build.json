{
  "extends": "./tsconfig",
  "compilerOptions": {
    "isolatedModules": false,
    "composite": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "src"
  },
  "exclude": [
    "setup.ts",
    "src/showcase/*",
    "src/**/*.stories.tsx",
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/*.test-d.ts",
    "src/**/*.mock.tsx"
  ]
}
